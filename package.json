{
  "name": "bigcommerce-coin-converter",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix build",
    "dev": "remix dev --manual",
    "start": "remix-serve ./build/index.js",
    "typecheck": "tsc",
    "format": "prettier --write 'app/**/*.{js,jsx,ts,tsx,css}'",
    "format:check": "prettier --check 'app/**/*.{js,jsx,ts,tsx,css}'",
    "seed": "tsc prisma/seed.ts && mv prisma/seed.js prisma/seed.cjs && node prisma/seed.cjs && rm prisma/seed.cjs"
  },
  "dependencies": {
    "@bigcommerce/big-design": "^0.38.1",
    "@prisma/client": "5.4.2",
    "@remix-run/css-bundle": "^2.0.1",
    "@remix-run/node": "^2.0.1",
    "@remix-run/react": "^2.0.1",
    "@remix-run/serve": "^2.0.1",
    "http-errors": "^2.0.0",
    "isbot": "3.7.0",
    "jsonwebtoken": "^9.0.2",
    "marked": "9.1.1",
    "node-bigcommerce": "github:bigcommerce/node-bigcommerce",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "styled-components": "^5.3.11"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.0.1",
    "@remix-run/eslint-config": "^2.0.1",
    "@types/http-errors": "^2.0.2",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/marked": "5.0.2",
    "@types/node": "^20.8.6",
    "@types/react": "18.2.28",
    "@types/react-dom": "18.2.13",
    "eslint": "^8.38.0",
    "prettier": "^3.0.3",
    "prisma": "5.4.2",
    "ts-node": "^10.9.1",
    "typescript": "5.2.2"
  },
  "engines": {
    "node": "20.8.0"
  },
  "prisma": {
    "seed": "npm run seed"
  }
}
